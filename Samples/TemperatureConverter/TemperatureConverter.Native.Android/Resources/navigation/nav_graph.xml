<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/start_fragment">

    <fragment
            android:id="@+id/start_fragment"
            android:name="TemperatureConverter.Android.Application.Common.BlankFragment"
            android:label="Start"
            tools:layout="@layout/fragment_blank">
        <action
                android:id="@+id/start_login_action"
                app:destination="@id/login_fragment"
                app:popUpTo="@id/start_fragment"
                app:popUpToInclusive="true"/>
        <action
                android:id="@+id/start_converter_action"
                app:destination="@id/converter_fragment"
                app:popUpTo="@id/start_fragment"
                app:popUpToInclusive="true"/>
    </fragment>

    <fragment
            android:id="@+id/login_fragment"
            android:name="TemperatureConverter.Android.Application.Login.LoginFragment"
            android:label="Login"
            tools:layout="@layout/fragment_login">
        <action
                android:id="@+id/finish_login_action"
                app:destination="@id/converter_fragment"
                app:launchSingleTop="true"
                app:popUpTo="@id/nav_graph"
                app:popUpToInclusive="true"/>
    </fragment>

    <fragment
            android:id="@+id/converter_fragment"
            android:name="TemperatureConverter.Android.Application.Converter.ConverterFragment"
            android:label="Converter"
            tools:layout="@layout/fragment_converter"/>

</navigation>