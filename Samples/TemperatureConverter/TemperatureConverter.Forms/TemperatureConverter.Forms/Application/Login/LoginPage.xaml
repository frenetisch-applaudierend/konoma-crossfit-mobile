<?xml version="1.0" encoding="utf-8"?>

<crossFit:CrossFitContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:login="clr-namespace:TemperatureConverter.Core.Application.Login;assembly=TemperatureConverter.Core"
    xmlns:common="clr-namespace:TemperatureConverter.Forms.Application.Common;assembly=TemperatureConverter.Forms"
    xmlns:crossFit="clr-namespace:Konoma.CrossFit;assembly=Konoma.CrossFit.Forms"
    x:Class="TemperatureConverter.Forms.Application.Login.LoginPage"
    x:TypeArguments="login:LoginScene"
    x:DataType="login:LoginScene"
    Title="{Binding ScreenTitle}">

    <ContentPage.Content>
        <StackLayout Padding="32" Spacing="24">
            <common:LabeledEntry Label="{Binding UsernameLabel}" Text="{Binding Username.Editable}" />
            <common:LabeledEntry Label="{Binding PasswordLabel}" Text="{Binding Password.Editable}" />
            <Button Text="{Binding LoginButtonTitle}" Command="{Binding SignInCommand}" />
        </StackLayout>
    </ContentPage.Content>
</crossFit:CrossFitContentPage>